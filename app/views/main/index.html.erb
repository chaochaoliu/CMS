
<h4>今日经文</h4>
 <div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>章节</th>
      <th>内容</th>
      <th>发布日期</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @latest_scripture.title %></td>
        <td><%= @latest_scripture.content %></td>
        <td><%= @latest_scripture.created_at.to_date %></td>

          </tbody>
</table>
</div>
<h4>最新证道</h4>
 <div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>题目</th>  
      <th>片长</th>
      <th>日期</th>
      <th>讲道人</th>
      <th>类别</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @latest_sermons.each do |sermon| %>
      <tr>
        <td><%= link_to sermon.title, sermon %></td>
        <td><%= sermon.length %></td>
        <td><%= sermon.date.to_date %></td>
        <td><%= sermon.preacher.name %></td>
        <td><%= sermon.category %></td>      
    <% end %>
  </tbody>
</table>
</div>

