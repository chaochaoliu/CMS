
<h4>今日经文</h4>
 <div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>章节</th>
      <th>内容</th>
      <th>发布日期</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <% unless @latest_scripture.nil? %>
          <td><%= @latest_scripture.title %></td>
          <td><%= @latest_scripture.content %></td>
          <td><%= @latest_scripture.created_at.to_date %></td>
        <%end%>
          </tbody>
</table>
</div>



<h4>最新通知</h4>
 <div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>题目</th>
      <th>发布者</th>
      <th>发布日期</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% unless @latest_notifications.nil? %>
    <% @latest_notifications.each do |latest_notification| %>
      <tr>
        <td><%= link_to latest_notification.title, latest_notification %></td>
        <td><%= latest_notification.publisher %></td>
        <td><%= latest_notification.created_at.to_date %></td>      
    <% end %>
   <% end %> 
  </tbody>
</table>
</div>


<% unless @latest_notifications.nil? %>
  <%= month_calendar  events: @events do |date, events|%>
    <%= date.strftime("%m.%d") %>

    <% events.each do |event| %>
      <div>
          <%= link_to event.title, event %>
      </div>
    <% end %>
  <% end %>
<% end %>
