<nav class="navbar navbar-light " style="background-color: #e3f2fd;">
  <ul class="nav navbar-nav">
    <li class="nav-item">
      <%= link_to "活动列表", events_path,  class: "nav-link"%>
    </li>
    <li class="nav-item">
      <%= link_to "我的活动", my_events_path,  class: "nav-link"%>
    </li>
  </ul>
</nav>
<h3>我的活动列表</h3>
<div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>活动名称</th>
      <th>主办单位</th>
      <th>开始日期</th>        
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_approved_events.each do |my_event| %>
      <tr>
        <td><%= link_to my_event.title, event_detail_path(:event_id => my_event.id) %></td>
        <td><%= my_event.ministry %></td>
        <td><%= my_event.start_time.to_date %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= paginate @my_approved_events %>
