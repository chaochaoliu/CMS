
<h3>我的活动列表</h3>
<div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>活动名称</th>
      <th>主办单位</th>
      <th>开始日期</th>        
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_events.each do |my_event| %>
      <tr>
        <td><%= link_to my_event.name, event_detail_path(:event_id => my_event.id) %></td>
        <td><%= my_event.ministry %></td>
        <td><%= my_event.start_time.to_date %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>