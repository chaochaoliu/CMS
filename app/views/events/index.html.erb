
<h3>活动列表</h3>
<div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>活动名称</th>
      <th>主办单位</th>
      <th>面向对象</th>  
      <th>剩余席位</th>   
      <th>申请截止时间</th>
      <th>状态</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event_path(event) %></td>
        <td><%= event.ministry %></td>
        <td><%= event.target_people %></td>
        <td><%= event.remaining_reservations %></td>
        <td><%= event.deadline_of_appication.to_date %></td>
        <td>
          <%unless EventRegistration.where(:user_id => current_user.id, :event_id => event.id).any? %>未申请
          <%else%>
            已申请
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
