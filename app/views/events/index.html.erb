<nav class="navbar navbar-light " style="background-color: #e3f2fd;">
  <ul class="nav navbar-nav">
    <li class="nav-item">
      <%= link_to "活动列表", events_path,  class: "nav-link"%>
    </li>
    <li class="nav-item">
      <%= link_to "我的活动", my_events_path,  class: "nav-link"%>
    </li>
  </ul>
</nav>

<h3>活动列表</h3>
<div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>活动名称</th>
      <th>主办单位</th>
      <th>面向对象</th>
      <th>人数限制</th>  
      <th>开始时间</th> 
      <th>结束时间</th>     
      <th>申请截止时间</th>
      <th>状态</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.title, event_path(event) %></td>
        <td><%= event.ministry %></td>
        <td><%= event.target_people %></td>
        <td><%= event.max_number_of_people %></td>
        <td><%= event.start_time.to_date %></td>
        <td><%= event.end_date.to_date %></td>

        <td><%= event.deadline_of_appication.to_date %></td>
        <td>
          <% @event_registration = EventRegistration.find_by(:user_id => current_user.id, :event_id => event.id ) %>
          <% if @event_registration.nil? %>未申请
          <%elsif @event_registration.approved == 1%>
            已申请
            <%else%>
            已参加
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

