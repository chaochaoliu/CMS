
<div class="container">
      <div class="row">

<p>
  <strong>活动名称</strong><br>
  <%= @event.title  %>
</p>

<p>
  <strong>活动时间</strong>
  <%= @event.start_time.to_date %>
</p>

<p>
  <strong>活动安排</strong><br>
  <%= @event.description %>
</p>

<p>
  <strong>适合人群</strong><br>
  <%= @event.target_people %>
</p>
<p>
  <strong>人数限制</strong><br>
  <%= @event.max_number_of_people %>
</p>

<% if @event_registration.nil? %>
<%= link_to '申请参加', new_event_registration_path(:event_id => @event.id) %>

  <%elsif @event_registration.status == 1%>
    已提交申请，请等待管理员审查
  <%elsif @event_registration.status == 2%>
    已通过申请
    <%else%>
    申请被管理员拒绝
<% end %>
<br>

<%= link_to '后退', events_path %>

</div>
</div>


