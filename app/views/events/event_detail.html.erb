<p id="notice"><%= notice %></p>
<h4><%= @event.name %>详情</h4>
 <div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>主题</th>
      <th>讲道人</th>
      <th>日期</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if !@event_sermons.nil? %>
    <% @event_sermons.each do |event_sermon| %>
      <tr>
        <td><%= link_to event_sermon.title, event_sermon %></td>
        <td><%= event_sermon.preacher %></td>
        <td><%= event_sermon.sermon_date %></td>
        <td><%= link_to 'Edit', edit_event_sermon_path(event_sermon,:event_id => event_sermon.event.id) %></td>
        <td><%= link_to 'Destroy', event_sermon, method: :delete, data: { confirm: 'Are you sure?' } %></td> 

      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>
</div>
<br><br>

<%= link_to '新建活动讲道', new_event_sermon_path(:event_id => @event.id) %>
<br><br>
<h4>活动通知</h4>
 <div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>通知内容</th>
      <th>发布者</th>
      <th>日期</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if !@event_notices.nil? %>
    <% @event_notices.each do |event_notice| %>
      <tr>
        <td><%= link_to event_notice.title, event_notice %></td>
        <td><%= event_notice.publisher %></td>
        <td><%= event_notice.created_at %></td>
         <td><%= link_to 'Edit', edit_event_notice_path(event_notice,:event_id => event_notice.event.id) %></td>
        <td><%= link_to 'Destroy', event_notice, method: :delete, data: { confirm: 'Are you sure?' } %></td> 

      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>
</div>
<br><br>

<%= link_to '新建通知', new_event_notice_path(:event_id => @event.id) %>

