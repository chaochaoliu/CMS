<h4><%= @event.title %>详情</h4>
 <div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>主题</th>
      <th>讲道人</th>
      <th>日期</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if !@event_sermons.nil? %>
    <% @event_sermons.each do |event_sermon| %>
      <tr>
        <td><%= link_to event_sermon.title, event_sermon %></td>
        <td><%= event_sermon.preacher.name %></td>
        <td><%= event_sermon.start_time.to_date %></td>
      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>
</div>
<br><br>

<br><br>
<h4>活动通知</h4>
 <div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>通知内容</th>
      <th>发布者</th>
      <th>日期</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if !@event_notices.nil? %>
    <% @event_notices.each do |event_notice| %>
      <tr>
        <td><%= link_to event_notice.title, event_notice %></td>
        <td><%= event_notice.publisher %></td>
        <td><%= event_notice.created_at.to_date %></td>

      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>
</div>
<br><br>

<%= link_to "后退", my_events_path%>

