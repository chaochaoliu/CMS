<p id="notice"><%= notice %></p>
<h1>三藩新闻</h1>
 <div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= link_to news.title, news_path(news) %></td>
        <td><%= news.author %></td>
        <td><%= news.date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br><br>
<%= link_to '提交新闻', new_news_path %>

