<%= form_for(@news) do |f| %>
  <% if @news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% @news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <div>
  <label>类型</label>
    <%= f.select :category, News.category.values, {} %>  
  </div>
  <div class="field">
    <label>题目</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>作者</label>
    <%= f.text_field :author %>
  </div>

  <div class="field">
    <label>内容</label><br>
    <%= f.text_area :content, cols: "80", rows: "15" %>
  </div>

  <div class="field">
              <label>图片（限一张）</label>
              <%= f.file_field :image %>
              <% if f.object.image? %>
                <%= image_tag f.object.image.thumb.url %>
                <%= f.label :remove_image %>
                <%= f.check_box :remove_image %> 
              <% end %>
           </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
