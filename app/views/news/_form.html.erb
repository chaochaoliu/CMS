<%= form_for(@news) do |f| %>
  <% if @news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% @news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, cols: "80", rows: "15" %>
  </div>
  <%= f.hidden_field :approved?, :value => false %>

  <div class="field">
              <%= f.label :image %><br>
              <%= f.file_field :image %>
              <% if f.object.image? %>
                <%= image_tag f.object.image.thumb.url %>
                <%= f.label :remove_image %>
                <%= f.check_box :remove_image %> 
              <% end %>
           </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
