<%= form_for(@profile) do |f| %>
  <%if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <%end%>

  <div class="field">
    <%= f.label :full_name %><br>
    <%= f.text_field :full_name, :required => true %>
  </div>

  <div class="field">
    <%= f.label :gender %><br>
    <%= f.select :gender, Profile.gender.values, {}  %>  
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>


  <div class="field">
    <%= f.label :date_of_birth %><br>
    <%= f.date_select :date_of_birth %>
  </div>

  <div class="field">
    <%= f.label :mobile %><br>
    <%= f.telephone_field :mobile, :required => true %>
  </div>

  <div class="field">
    <%= f.label :emergency_contact_person %><br>
    <%= f.text_field :emergency_contact_person %>
  </div>

   <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>

   <div class="field">
    <%= f.label :become_a_member_since %><br>
    <%= f.date_select :time_to_become_member %>
  </div>

   <div class="field">
    <%= f.label :nationality %><br>
    <%= f.text_field :nationality  %>  
  </div>

  <div class="field">
    <%= f.label :marital_status %><br>
    <%= f.select :marital_status, Profile.marital_status.values, {}  %> 
  </div>

  <div class="field">
    <%= f.label :faith_status %><br>
    <%= f.select :faith_level, Profile.faith_level.values, {}  %>  
  </div>

  <div class="field">
    <%= f.label :visa_type %><br>
    <%= f.select :visa_type, Profile.visa_type.values, {}  %>  
  </div>

  <div class="field">
    <%= f.label :i20_expired_date %><br>
    <%= f.date_select :i20_expire_date %>
  </div>

   <div class="field">
    <%= f.label :house_leader %><br>
    <%= f.text_field :house_leader, :required => true %>
  </div>

   <div class="field">
    <%= f.label :group_leader %><br>
    <%= f.text_field :group_leader, :required => true %>
  </div>

  <div class="field">
    <%= f.label :family_member %><br>
    <%= f.text_field :family_member %>
  </div>

   <div class="field">
    <%= f.label :self_description %><br>
    <%= f.text_area(:self_description, cols: 40, rows: 4) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>