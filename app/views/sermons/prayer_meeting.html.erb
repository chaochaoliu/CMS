
<h4>祷告会</h4>
<div class=" col-md-12 col-lg-12 "> 
<table class="table table-user-information">
  <thead>
    <tr>
      <th>题目</th>  
      <th>片长</th>
      <th>日期</th>
      <th>讲道人</th>
      <th>签到人数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prayer_meetings.each do |prayer_meeting| %>
      <tr>
        <td><%= link_to prayer_meeting.title, prayer_meeting %></td>
        <td><%= prayer_meeting.length %></td>
        <td><%= prayer_meeting.start_time.to_date %></td>
        <td><%= prayer_meeting.preacher.name %></td>
        <td><%= prayer_meeting.sign_in_count %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= paginate @prayer_meetings %>

